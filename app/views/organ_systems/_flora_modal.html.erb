<!-- Modal -->
<div class="modal fade michelle" id="floraModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #2e353d;">
        <%= image_tag "logo.png", :style => 'width: 250px; height: 50px;' %>
        <!-- <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white;">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1><%= @organ_system.name.capitalize %> flora</h1>

        <% @organisms.each do |organism| %>
          <div class="flora_results"> <%= link_to organism.name.capitalize, organism_path(id: organism.id, organ_system_id: @organ_system.id), remote: true %></div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
