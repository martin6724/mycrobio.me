stylesheet_link_tag("organ_systems.scss")

<!-- Modal -->
<div class="modal fade michelle" id="floraModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%= image_tag "logo.png", :style => 'width: 250px; height: 50px;' %>
        <!-- <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white;">
          <span aria-hidden="true">&times;</span>
        </button>

<!-- "data-toggle" => "modal" -->

      </div>

      <div class="modal-body">

        <% @organisms.each do |organism| %>
          <div class="flora_results"> <%= link_to organism.name.titleize, organism_path(id: organism.id, organ_system_id: @organ_system.id), remote: true %></div>
        <% end %>
      </div>

    </div>
  </div>
</div>
